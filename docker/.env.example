# Docker Compose Environment Variables

# JWT Secret (REQUIRED - generate a strong random string)
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database (Optional - defaults are in docker-compose.yml)
POSTGRES_DB=crm_ai_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password

# Ports (Optional - defaults are in docker-compose.yml)
BACKEND_PORT=3000
FRONTEND_PORT=80
POSTGRES_PORT=5432
REDIS_PORT=6379
